datasource db {
  provider = "mysql"
}

model Evento {
  id    Int     @id @default(autoincrement())
  nome  String
  data  String
  preco Float
  vagas Int
  inscricoes Inscricao[]
}

model Inscricao {
  id          Int    @id @default(autoincrement())
  usuarioId   Int
  status      String @default("Pendente")
  valor       Float
  eventoId    Int
  evento      Evento @relation(fields: [eventoId], references: [id])
}